<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="16dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Team A"
                android:textSize="32sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:textColor="#FF1744"
                android:gravity="center_horizontal"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Goals Scored"
                android:textSize="25sp"
                android:layout_marginTop="16dp"
                android:textColor="@android:color/black"
                android:gravity="center_horizontal"/>

            <TextView
                android:id="@+id/goalsA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_marginTop="16dp"
                android:textSize="32sp"
                android:textColor="@android:color/black"
                android:gravity="center_horizontal"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fouls\n Commited"
                android:textSize="25sp"
                android:layout_marginTop="16dp"
                android:textColor="@android:color/black"
                android:gravity="center_horizontal"/>

            <TextView
                android:id="@+id/foulsA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="32sp"
                android:layout_marginTop="16dp"
                android:textColor="@android:color/black"
                android:gravity="center_horizontal"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Goal"
                android:textSize="32sp"
                android:fontFamily="monospace"
                android:onClick="increasegoalA"
                android:textColor="@android:color/white"
                android:layout_margin="16dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Foul"
                android:textSize="32sp"
                android:textColor="@android:color/white"
                android:fontFamily="monospace"
                android:onClick="increasefoulA"
                android:layout_margin="16dp"/>


        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="32dp"
            android:background="@android:color/darker_gray"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_weight="1"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Team B"
                android:textSize="32sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:textColor="#FF1744"
                android:gravity="center_horizontal"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Goals Scored"
                android:textSize="25sp"
                android:layout_marginTop="16dp"
                android:textColor="@android:color/black"
                android:gravity="center_horizontal"/>

            <TextView
                android:id="@+id/goalsB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_marginTop="16dp"
                android:textSize="32sp"
                android:textColor="@android:color/black"
                android:gravity="center_horizontal"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fouls\n Commited"
                android:textSize="25sp"
                android:layout_marginTop="16dp"
                android:textColor="@android:color/black"
                android:gravity="center_horizontal"/>

            <TextView
                android:id="@+id/foulsB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="32sp"
                android:layout_marginTop="16dp"
                android:textColor="@android:color/black"
                android:gravity="center_horizontal"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Goal"
                android:textSize="32sp"
                android:fontFamily="monospace"
                android:onClick="increasegoalB"
                android:textColor="@android:color/white"
                android:layout_margin="16dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Foul"
                android:textSize="32sp"
                android:fontFamily="monospace"
                android:onClick="increasefoulB"
                android:textColor="@android:color/white"
                android:layout_margin="16dp"/>

        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/resetscreen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RESET"
        android:textSize="32sp"
        android:layout_margin="32dp"
        android:gravity="center_horizontal"
        android:onClick="resetfunction"
        android:textColor="@android:color/white"/>
</LinearLayout>